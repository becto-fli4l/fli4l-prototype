#!/bin/sh
#------------------------------------------------------------------------------
# /usr/bin/online_keyprog                                          __FLI4LVER__
# Creation:     11.10.2014 cspiess
# Last Update:  $Id: online_keyprog 51847 2018-03-06 14:55:07Z kristov $
#------------------------------------------------------------------------------

case "$#" in
    0)
        online=`fli4lctrl status`
        if [ "$online" = "online" ]
        then
           # go offline
           log "going offline due to user button"
           fli4lctrl hangup
        else
           # go online
           log "going online due to user button"
           fli4lctrl dial
        fi
    ;;
    *)   
        myname=`basename $0`
        echo "Usage: $myname"
    ;;
esac
