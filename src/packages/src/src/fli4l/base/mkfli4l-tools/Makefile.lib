$(LIB)_LIBRARY := $(LIB).a

$(LIB)/src: LIB := $(LIB)
$(LIB)/src:
	mkdir $@
	tar xf $(LIB)/$($(LIB)_ARCHIVE) -C $@ --strip-components=1
	cd $@; for p in ../patches/*.patch; do [ -f $$p ] && patch -p1 < $$p || true; done

$($(LIB)_TARGET): | $(LIB)/src

$(LIB)/$($(LIB)_LIBRARY): LIB := $(LIB)
$(LIB)/$($(LIB)_LIBRARY): $($(LIB)_TARGET)
	cp $< $@

$(LIB)-clean: LIB := $(LIB)
$(LIB)-clean:
	rm -rf $(LIB)/src $(LIB)/$($(LIB)_LIBRARY)

clean: $(LIB)-clean

.PHONY: $(LIB)-clean
